<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.growth.graph.view.GraphFragment"
    android:background="@color/colorBase">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/tab_temp"
                    android:clickable="true"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp">
                        <TextView
                            android:text="Temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView15"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBase" />

                        <View
                            android:layout_width="36dp"
                            android:layout_height="3dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/tab_marker_temp" />
                    </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"></View>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/tab_humidity"
                        android:clickable="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp">

                        <View
                            android:layout_width="36dp"
                            android:layout_height="3dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/tab_marker_humidity" />

                        <TextView
                            android:text="Humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView17"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBase" />
                    </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view3"></View>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/tab_light"
                        android:clickable="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp">

                        <View
                            android:layout_width="36dp"
                            android:layout_height="3dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/tab_marker_light" />

                        <TextView
                            android:text="Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView18"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBase" />
                    </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view5"></View>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/tab_co2"
                        android:clickable="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp">

                        <View
                            android:layout_width="36dp"
                            android:layout_height="3dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/tab_marker_co2" />

                        <TextView
                            android:text="Co2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView19"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBase" />
                    </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view6"></View>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/tab_ec"
                        android:clickable="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp">

                        <View
                            android:layout_width="36dp"
                            android:layout_height="3dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/tab_marker_ec" />

                        <TextView
                            android:text="EC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView22"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBase" />
                    </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view7"></View>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/tab_ph"
                        android:clickable="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp">

                        <View
                            android:layout_width="36dp"
                            android:layout_height="3dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/tab_marker_ph" />

                        <TextView
                            android:text="PH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView23"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBase" />
                    </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view8"></View>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/tab_soil_moisture"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:clickable="true">

                    <View
                        android:layout_width="36dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:id="@+id/tab_marker_soil_moisture"
                        android:layout_gravity="bottom|center_horizontal"></View>

                    <TextView
                        android:text="Soil Moisture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView25"
                        android:textColor="@color/colorBase"
                        android:layout_gravity="center" />

                </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view10"></View>

            </LinearLayout>
        </HorizontalScrollView>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:layout_weight="1.5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView13"
                                android:layout_gravity="right"
                                android:layout_marginRight="8dp"
                                android:textColor="@color/colorPrimary" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:text="0000-00-00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_today"
                                android:textColor="@color/colorPrimary" />
                        </FrameLayout>

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="right">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp">

                            <TextView
                                android:text="update time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView16"
                                android:layout_marginRight="6dp"
                                android:layout_gravity="right"
                                android:textColor="@color/colorPrimary" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="00:00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_update_time"
                                android:textColor="@color/colorPrimary" />
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <TextView
                            android:text="00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_sensor_data"
                            android:layout_weight="1"
                            android:textSize="40sp"
                            android:textColor="@color/colorPrimary" />
                    </FrameLayout>
                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">

                            <TextView
                                android:text="MAX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView20"
                                android:layout_gravity="right"
                                android:textColor="@color/colorPrimary" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:text="00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_max_sensor_data"
                                android:textColor="@color/colorPrimary" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">

                            <TextView
                                android:text="MIN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView21"
                                android:layout_gravity="right"
                                android:textColor="@color/colorPrimary" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:text="00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_min_sensor_data"
                                android:textColor="@color/colorPrimary" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorAccent"
                android:id="@+id/view4"
                android:layout_marginTop="16dp"></View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1.5"
                    android:id="@+id/btn_date_pre"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_left"
                        android:id="@+id/imageView10" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="0000-00-00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_graph_date"
                        android:layout_weight="1"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:id="@+id/btn_date_next"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_right"
                        android:id="@+id/imageView9" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/graphview">

            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progress_layout"
        android:visibility="gone"
        android:clickable="true">

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/progress_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true"
            android:layout_gravity="center_vertical|center_horizontal" />
    </FrameLayout>
</FrameLayout>
